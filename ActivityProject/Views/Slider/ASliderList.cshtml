
@model IEnumerable<EntityLayer.Concrete.Slider>

@{
	ViewBag.Title = "ASliderList";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<a href="/Slider/ANewSlider/" class="btn btn-primary mb-3">Yeni Ekle</a>

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-lg-4 col-sm-6">
			<div class="card">
				<div class="card-body">
					<div class="text-center">
						<img src="@item.Image" alt="" class="img-fluid mb-2" style="width: 100%; height: 230px; object-fit: cover;">
						<h5 class="mt-3 mb-1">@item.Title</h5>
						@*<p class="mt-2">@item.Face</p>*@
						<p class="text-warning">Buton Yolu : @item.ButonTitle</p>
						@if (item.Status == true)
						{
							<p class="m-0 p-1 text-success">Yayında</p>
						}
						else
						{
							<p class="m-0 p-1 text-danger">Yayında Değil</p>
						}
						<p class="m-0 p-1 text-primary">Tarih: @item.SliderAddDate.ToString("d MMMMM yyy")</p>
						<br />
					</div>
					<div class="text-center mb-2">
						<a href="/Slider/ASliderDelete/@item.SliderId" class="btn btn-success">Sil</a>
						<a href="/Slider/ASliderUpdate/@item.SliderId" class="btn btn-warning">Güncelle</a>
						@if (item.Status == true)
						{
							<a href="/Slider/ASliderDoFalse/@item.SliderId" class="btn btn-danger">Pasif Yap</a>
						}
						else
						{
							<a href="/Slider/ASliderDoTrue/@item.SliderId" class="btn btn-success">Aktif Yap</a>
						}
					</div>
				</div>
			</div>
		</div>
	}
</div>

