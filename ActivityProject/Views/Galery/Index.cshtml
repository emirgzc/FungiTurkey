
@using PagedList
@using PagedList.Mvc

@using EntityLayer.Concrete
@model PagedList.IPagedList<Galery>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/AnaLayout.cshtml";
}

<section class="single-page-header">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<h2>Galeri</h2>
				<ol class="breadcrumb header-bradcrumb">
					<li><a href="/Slider/Index/">Ana Sayfa /</a></li>
					<li class="active">Galeri</li>
				</ol>
			</div>
		</div>
	</div>
</section>

<section class="portfolio section-sm" id="portfolio">
	<div class="container-fluid">
		<div class="row ">
			<div class="col-lg-12">

				<div class="row filtr-container">
					@foreach (var item in Model)
					{
						<div class="col-md-3 col-sm-6 col-xs-6 filtr-item " data-category="mix, design">
							<div class="portfolio-block">
								<img class="img-fluid" src="@item.Image" alt="" style="width: 100%; height: 260px; object-fit: cover;">
								<div class="caption">
									<a class="search-icon" href="@item.Image" target="_blank" data-lightbox="image-1">
										<i class="tf-ion-ios-search-strong"></i>
									</a>
									<h4><a href="@item.Image" target="_blank">@item.Title</a></h4>
								</div>
							</div>
						</div>
					}
				</div>
			</div> <!-- /end col-lg-12 -->
		</div> <!-- end row -->
		@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }), new
			PagedListRenderOptions
			{
				   LiElementClasses = new List<string>
				   { "page-link" }
			})
	</div> <!-- end container -->
</section>

@Html.Action("Index", "Footer")