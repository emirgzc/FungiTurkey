
@{
	Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">

<head>
	<title>Fungi Turkey © | Üye Giriş</title>
	<!-- Meta tags -->
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<!-- //Meta tags -->
	<link rel="stylesheet" href="~/login6/css/style.css" type="text/css" media="all" /><!-- Style-CSS -->
	<link href="~/login6/css/font-awesome.css" rel="stylesheet"><!-- font-awesome-icons -->
	<link rel="shortcut icon" type="image/x-icon" href="~/bingo/images/black1.png" />
</head>

<body>
	<section class="w3l-form-36">
		<div class="form-36-mian section-gap">
			<div class="wrapper">
				<div class="form-inner-cont">
					<h3>Üye Giriş Formu</h3>
					<form action="#" method="post" class="signin-form">
						<div class="form-input">
							<span class="fa fa-envelope-o" aria-hidden="true"></span>
							<input type="email" name="Email" placeholder="Mail Adresi" required />
						</div>
						<div class="form-input">
							<span class="fa fa-key" aria-hidden="true"></span>
							<input type="password" name="Password" placeholder="Şifre" required />
						</div>
						<div class="login-remember d-grid">
							<button class="btn theme-button">Giriş Yap</button>
							@if (ViewBag.ErrorMessage != null)
							{
								<div class="text-center text-danger" style="margin-bottom:15px">
									<a class="text-danger" style="color:red;">
										@ViewBag.ErrorMessage
									</a>
								</div>
							}
						</div>
					</form>
					<p class="signup">Üye Değil Misin? <a href="/MemberLogin/CreateMember/" class="signuplink">Hemen Üye Ol</a></p>
					<p class="signup"> <a href="/Slider/Index/" class="signuplink signup">Ana Sayfa </a></p>
				</div>

				<!-- copyright -->
				<div class="copy-right">
					<p>
						2021 | FUNGI TURKEY © TÜM HAKLARI SAKLIDIR. <a href="#" target="_blank">Muhammed Emir Gözcü</a>
					</p>
				</div>
				<!-- //copyright -->
			</div>
		</div>
	</section>
	@if (TempData["kayitmem"] != null)
	{
		<link href="~/bingo/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css" rel="stylesheet" />
		<script src="~/bingo/plugins/sweetalert2/sweetalert2.min.js"></script>

		<script>
			Swal.fire("Kayıt Başarılı", "Kayıt Başarı ile Oluşturuldu.", "success");
		</script>
	}
</body>

</html>