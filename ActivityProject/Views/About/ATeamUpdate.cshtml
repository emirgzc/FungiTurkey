
@model EntityLayer.Concrete.Team

@{
	ViewBag.Title = "ATeamUpdate";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Slider Güncelleme</h4>
			<div class="basic-form">
				@using (Html.BeginForm("ATeamUpdate", "About", FormMethod.Post, new { enctype = "multipart/form-data" }))
				{
					@Html.HiddenFor(x => x.PersonId)
					<div class="form-group">
						@Html.Label("İsim Soyisim")
						@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Hakkında")
						@Html.TextAreaFor(x => x.About, 6, 20, new { @class = "form-control", @id = "editorid" })
						@Html.ValidationMessageFor(x => x.About, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Meslek")
						@Html.TextBoxFor(x => x.Job, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Job, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Facebook")
						@Html.TextBoxFor(x => x.Facebook, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Facebook, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Twitter")
						@Html.TextBoxFor(x => x.Twitter, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Twitter, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Linkedin")
						@Html.TextBoxFor(x => x.Linkedin, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Linkedin, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("İnstagram")
						@Html.TextBoxFor(x => x.Instagram, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Instagram, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<label>Resim</label>
						<input type="file" name="Image" class="form-control">
					</div>
					<button type="submit" class="btn btn-dark">Güncelle</button>
				}
			</div>
		</div>
	</div>
</div>

