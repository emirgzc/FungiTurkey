
@model EntityLayer.Concrete.Sponsor

@{
	ViewBag.Title = "ASponsorUpdate";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Sponsor Güncelleme</h4>
			<div class="basic-form">
				@using (Html.BeginForm("ASponsorUpdate", "Sponsor", FormMethod.Post, new { enctype = "multipart/form-data" }))
				{
					@Html.HiddenFor(x => x.SponsorId)
					<div class="form-group">
						@Html.Label("Başlık")
						@Html.TextBoxFor(x => x.SponsorName, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.SponsorName, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Web Site")
						@Html.TextBoxFor(x => x.SponsorWebSite, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.SponsorWebSite, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<label>Resim</label>
						<input type="file" name="Image" class="form-control">
					</div>
					<button type="submit" class="btn btn-dark">Güncelle</button>
				}
			</div>
		</div>
	</div>
</div>

