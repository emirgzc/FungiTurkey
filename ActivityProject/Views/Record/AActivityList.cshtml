
@model IEnumerable<EntityLayer.Concrete.Activity>

@{
	ViewBag.Title = "AActivityList";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-lg-4 col-sm-6">
			<div class="card">
				<div class="card-body">
					<div class="text-center">
						<img src="@item.Image" alt="" class="img-fluid mb-2" style="width: 100%; height: 230px; object-fit: cover;">
						<h5 class="mt-3 mb-1">@item.Title</h5>
						<br />
						<p class="m-0 p-1"><b>Yapımcı</b> : @item.Director</p>
						<p class="m-0 p-1"><b>Kontenjan</b> : @item.Quota</p>
						<br />
					</div>
					<div class="text-center mb-2">
						<a href="/Record/ARecordListByActivity/@item.ActId" class="btn btn-info">Kayıtlar</a>
					</div>
				</div>
			</div>
		</div>
	}
</div>
