
@model IEnumerable<EntityLayer.Concrete.Sponsor>

@{
	ViewBag.Title = "ASponsorList";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<a href="/Sponsor/AAddSponsor/" class="btn btn-secondary mb-3">Ekle</a>

<div class="row">
	@foreach (var item in Model)
	{
		<div class="col-lg-4 col-sm-6">
			<div class="card">
				<div class="card-body">
					<div class="text-center">
						<img src="@item.Image" alt="" class="img-fluid mb-2" style="width: 100%; height: 150px; object-fit: cover;">
						<h5 class="mt-3 mb-1">@item.SponsorName</h5>
						<p>@item.SponsorWebSite</p>
						@if (item.Status == true)
						{
							<p class="m-0 p-1 text-success">Yayında</p>
						}
						else
						{
							<p class="m-0 p-1 text-danger">Yayında Değil</p>
						}
						<br />
					</div>
					<div class="text-center mb-2">
						<a href="/Sponsor/ASponsorDelete/@item.SponsorId" class="btn btn-warning">Sil</a>
						<a href="/Sponsor/ASponsorUpdate/@item.SponsorId" class="btn btn-success">Güncelle</a>
						@if (item.Status == true)
						{
							<a href="/Sponsor/ASponsorDoFalse/@item.SponsorId" class="btn btn-danger">Pasif Yap</a>
						}
						else
						{
							<a href="/Sponsor/ASponsorDoTrue/@item.SponsorId" class="btn btn-success">Aktif Yap</a>
						}
					</div>
				</div>
			</div>
		</div>
	}
</div>

