
@model IEnumerable<EntityLayer.Concrete.ActivityComment>

@{
	ViewBag.Title = "AActCommentList";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row" id="table-head">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title">Etkinlik Yorumları</h4>
			</div>
			<div class="card-content">
				<div class="table-responsive">
					<table class="table mb-0">
						<thead class="thead-dark">
							<tr>
								<th>İsim Soyisim</th>
								<th>Mail Adresi</th>
								<th>Tarih</th>
								<th>Etkinlik</th>
								<th>Durum</th>
								<th>Detay</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td>@item.Name @item.Surname</td>
									<td>@item.Email</td>
									<td>@item.CommentDate.ToString("d MMMMM yyy")</td>
									<td>@item.Activity.Title</td>
									@if (item.Status)
									{
										<td class="text-success">Onaylandı</td>
									}
									else
									{
										<td class="text-danger">Onaylanmadı</td>
									}
									<td><a href="/ActivityComment/AActCommentDetails/@item.ActvtyComId">Detay</a></td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>