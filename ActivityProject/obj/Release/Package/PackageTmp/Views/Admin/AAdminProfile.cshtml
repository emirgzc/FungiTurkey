
@model EntityLayer.Concrete.Admin

@{
	ViewBag.Title = "AAdminProfile";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using (Html.BeginForm("AAdminProfile", "Admin", FormMethod.Post))
{
	<div class="form-group">
		@Html.HiddenFor(x => x.AdminId, new { @class = "form-control" })

		@Html.Label("Admin Adı")
		@Html.TextBoxFor(x => x.Username, new { @class = "form-control", @required = "required" })
		@Html.ValidationMessageFor(x => x.Username, "", new { @class = "text-danger" })
		<br />
		@Html.Label("Admin Şifre")
		<input type="password" name="Password" class="form-control" />
		@Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
		<br />
		@Html.Label("Admin Rol")
		@Html.TextBoxFor(x => x.Role, new { @class = "form-control", disabled = "disabled" })
		@Html.ValidationMessageFor(x => x.Role, "", new { @class = "text-danger" })
		<br />
		<button class="btn btn-info">Güncelle</button>
	</div>
}

