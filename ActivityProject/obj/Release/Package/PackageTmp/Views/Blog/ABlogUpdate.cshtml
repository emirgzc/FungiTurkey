
@model EntityLayer.Concrete.Blog

@{
	ViewBag.Title = "ABlogUpdate";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Blog Güncelleme</h4>
			<div class="basic-form">
				@using (Html.BeginForm("ABlogUpdate", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
				{
					@Html.HiddenFor(x => x.BlogId)
					<div class="form-group">
						@Html.Label("Başlık")
						@Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("İçerik")
						@Html.TextAreaFor(x => x.Content, 6, 20, new { @class = "form-control", @id = "editorid" })
						@Html.ValidationMessageFor(x => x.Content, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						@Html.Label("Yazar")
						@Html.TextBoxFor(x => x.Author, new { @class = "form-control" })
						@Html.ValidationMessageFor(x => x.Author, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<label>Resim 1</label>
						<input type="file" name="Image" class="form-control">
					</div>
					<button type="submit" class="btn btn-dark">Güncelle</button>
				}
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script src="~/mazer/dist/assets/vendors/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}

