
@model EntityLayer.Concrete.Services

@{
	ViewBag.Title = "AServiceAdd";
	Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-xl-12 col-xxl-12">
	<div class="card">
		<div class="card-header">
			<h4 class="card-title">Organizasyon Ekleme</h4>
			@if (ViewBag.hata != null)
			{
				<div class="text-center text-danger" style="margin-bottom:15px">
					<a class="text-danger" style="color:red;">
						@ViewBag.hata
					</a>
				</div>
			}
		</div>
		<div class="card-body">
			<div class="basic-form">
				@using (Html.BeginForm("AServiceAdd", "Service", FormMethod.Post, new { enctype = "multipart/form-data" }))
				{
					<div class="form-group">
						<label>Başlık</label>
						<input type="text" name="Title" required="" class="form-control input-default">
						@Html.ValidationMessageFor(x => x.Title, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<label>İçerik</label>
						<textarea id="editorid" name="Content" class="form-control"></textarea>
						@Html.ValidationMessageFor(x => x.Content, "", new { @class = "text-danger" })
					</div>
					<div class="form-group">
						<label>Resim</label>
						<input type="file" name="Image" class="form-control" required="">
					</div>

					<button type="submit" class="btn btn-primary">Ekle</button>
				}
			</div>
		</div>
	</div>
</div>
@section Scripts{
	<script src="~/mazer/dist/assets/vendors/ckeditor/ckeditor.js"></script>
	<script>
		CKEDITOR.replace("editorid")
	</script>
}
